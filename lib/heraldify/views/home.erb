<section class="main padding-top-80">
    <% unless defined?(@articles) == nil %>  
        <h3>
            The three most recent articles
        </h3>
        <% @articles.each do |article| %>
        <div class="grid">
            <div class="grid-block">
                <h3>
                    <%= article['post_title'] %> 
                </h3>

                <% unless article['featured_image'].empty? %>
                <% mimeType = MIME::Types.type_for(Base64.decode64(article['featured_image'])) %>
                    <img src="data:<%= mimeType.first %>;charset=utf-8;base64,<%= article['featured_image'] %>" />
                <% end %>

                <p>
                    <%= article['post_content'] %>
                </p>
            </div>
        </div>
        <% end %>
    <% end %>
</section>
